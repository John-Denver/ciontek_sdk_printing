<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gmail" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Optional surface customization -->
        <item name="colorSurface">@color/green_50</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar (optional) -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_700</item>
    </style>
</resources>
